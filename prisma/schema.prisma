generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UsageRecord {
  id        BigInt   @id @default(autoincrement())
  timestamp DateTime @default(now()) @db.Timestamptz
  
  // YesCode specific fields
  userId     Int
  username   String
  email      String
  apiKey     String
  subscriptionBalance Decimal
  payAsYouGoBalance   Decimal
  balance    Decimal
  subscriptionPlanId  Int
  subscriptionExpiry  DateTime @db.Timestamptz
  preferredProviderId Int
  emailVerified       Boolean
  currentMonthSpend   Decimal
  lastMonthReset      DateTime @db.Timestamptz
  lastDailyBalanceAdd DateTime @db.Timestamptz
  referralCode        String
  referredByUserId    Int?
  totalReferralEarnings Decimal
  
  // Subscription plan details
  planName         String
  planDescription  String
  planType         String
  planPrice        Decimal
  dailyBalance     Decimal
  monthlySpendLimit Decimal
  initialBalance   Decimal
  planStock        Int
  planIsActive     Boolean
  
  createdAt DateTime @default(now()) @db.Timestamptz
  
  @@map("usage_records_v3")
}

model DailyStats {
  id     BigInt @id @default(autoincrement())
  date   DateTime @unique @db.Date
  
  startBalance   Decimal
  endBalance     Decimal
  dailyAllowance Decimal  // 每日配额
  currentSpend   Decimal  // 当前月消费
  usagePercentage Float
  
  notified50     Boolean @default(false)
  notified80     Boolean @default(false)
  notified95     Boolean @default(false)
  
  createdAt DateTime @default(now()) @db.Timestamptz
  updatedAt DateTime @updatedAt @db.Timestamptz
  
  @@map("daily_stats_v3")
}

model SystemLog {
  id        BigInt   @id @default(autoincrement())
  timestamp DateTime @default(now()) @db.Timestamptz
  
  type      String
  message   String
  details   String?
  
  createdAt DateTime @default(now()) @db.Timestamptz
  
  @@map("system_logs_v3")
}
