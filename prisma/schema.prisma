generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UsageRecord {
  id        BigInt   @id @default(autoincrement())
  timestamp DateTime @default(now()) @db.Timestamptz
  
  // Essential monitoring fields only
  userId     Int      // 用户ID (不敏感的数字标识符)
  balance    Decimal  // 当前余额
  subscriptionPlanId  Int  // 订阅计划ID
  subscriptionExpiry  DateTime @db.Timestamptz  // 订阅到期时间
  currentMonthSpend   Decimal  // 当月消费
  
  // Plan details for monitoring
  planName         String   // 计划名称
  dailyBalance     Decimal  // 每日配额
  monthlySpendLimit Decimal // 月消费限额
  
  createdAt DateTime @default(now()) @db.Timestamptz
  
  @@map("usage_records_v3")
}

model DailyStats {
  id     BigInt @id @default(autoincrement())
  date   DateTime @unique @db.Date
  
  startBalance   Decimal
  endBalance     Decimal
  dailyAllowance Decimal  // 每日配额
  currentSpend   Decimal  // 当前月消费
  usagePercentage Float
  
  notified50     Boolean @default(false)
  notified80     Boolean @default(false)
  notified95     Boolean @default(false)
  
  createdAt DateTime @default(now()) @db.Timestamptz
  updatedAt DateTime @updatedAt @db.Timestamptz
  
  @@map("daily_stats_v3")
}

model SystemLog {
  id        BigInt   @id @default(autoincrement())
  timestamp DateTime @default(now()) @db.Timestamptz
  
  type      String
  message   String
  details   String?
  
  createdAt DateTime @default(now()) @db.Timestamptz
  
  @@map("system_logs_v3")
}
